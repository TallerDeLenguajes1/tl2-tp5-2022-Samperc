@model NombreSolucion.Models.PedidoVM

@{
    ViewData["Title"] = "AltaPedido";
}
<section class="row">
    <article class="col">

        <form class="form" asp-controller="Pedido" asp-action="agregarPedido" method="post">
            <label asp-for="@Model.Nro" class="form-label" > Numero pedido: </label>
            <input asp-for="@Model.Nro"  class="form-control" type="text" >
            <br>

            <label asp-for="@Model.Obs" class="form-label" > Observaciones: </label>
            <textarea asp-for="@Model.Obs" class="form-control" cols="10" rows="10">
                escribe las observaciones sobre el pedido
            </textarea>
            <br>

            <label asp-for="@Model.cliente" class="form-label" >Nombre Cliente: </label>
            <input asp-for="@Model.cliente" class="form-control" type="textarea">
            <br>

            <label asp-for="@Model.Estado"  class="form-control" ></label>
            <input asp-for="@Model.Estado"  class="form-control" />
                         <br>
            <button type="submit">Register</button>
        </form>
    </article>
    <article class="col">
    </article>
</section>